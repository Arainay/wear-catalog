{
  "env": {
    "browser": true,
    "es6": true,
    "amd": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/prop-types": 0,
    "no-case-declarations": 0,
    "react/display-name": [
      0
    ],

    "semi": ["error", "always"],
    "no-console": "error",
    "max-len": ["error", { "code": 120, "tabWidth": 4 }]
  },
  "ignorePatterns": ["webpack.*.js"]
}
